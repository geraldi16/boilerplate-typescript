{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./",
    "outDir": "dist",
    "target": "es6",
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "paths": {},
    "sourceMap": true
  },
  "exclude": [
    "dist",
    "node_modules",
    "**/dist/*",
    "**/node_modules/*"
  ]
}
